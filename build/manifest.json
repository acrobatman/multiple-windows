{
  "background": {
    "scripts": ["background.js"]
  },
  "manifest_version": 2,
  "name": "Work to Multiple Windows",
  "description": "This project is a chrome extension. It provide to create windows to different sizes and multiple for front-end developers.",
  "version": "1.0",
  "browser_action": {
    "default_icon": "assets/icon-16.png"
  },
  "icons": {
    "256": "assets/icon-256.png",
    "128": "assets/icon-128.png",
    "48": "assets/icon-48.png",
    "16": "assets/icon-16.png"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "<all_urls>",
    "*://*/*"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "web_accessible_resources": [
    "background.js",
    "assets/bundle.js",
    "assets/bundle.css",
    "*.ttf",
    "*.woff",
    "*.woff2",
    "*.png",
    "*.eot",
    "*.svg",
    "http://*",
    "https://*"
  ]
}
